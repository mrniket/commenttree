doctype html
html(lang='en', data-ng-controller='AppController')
  head
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='/assets/vendor/bootstrap/dist/css/bootstrap.css')
    link(rel='stylesheet', href='/assets/vendor/normalize-css/normalize.css')
    link(rel='stylesheet', href='/assets/css/styles.css')
    title(data-ng-bind='pageTitle') commenttree
  body
    div(data-ng-include, data-src='headerPartial')
    div#view(data-ng-view, data-onload='handleViewLoaded()')
    script(src='/assets/vendor/requirejs/require.js', data-main='/assets/js/app')